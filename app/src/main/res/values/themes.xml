<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Autocheck" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary brand color, action bar bg -->
        <item name="colorPrimary">@color/auto_primary</item>

        <!-- Status bar color | Navigation bar color -->
        <item name="colorPrimaryDark">@color/auto_secondary</item>
        <item name="colorPrimaryVariant">@color/auto_secondary</item>

        <!--Search Bg, -->
        <item name="colorPrimarySurface">@color/auto_primary_surface</item>

        <!--Search Text & Icon Tint-->
        <item name="colorOnPrimarySurface">@color/auto_secondary</item>

        <!--Color of items on the primary surfaces-->
        <item name="colorOnPrimary">@color/auto_secondary</item>

        <!-- Secondary brand color. | Accent -->
        <item name="colorSecondary">@color/auto_secondary</item>
        <item name="colorSecondaryVariant">@color/auto_secondary_variant</item>
        <item name="colorOnSecondary">@color/auto_on_secondary</item>
        <item name="android:textColorPrimary">@color/auto_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Surface -->
        <item name="colorSurface">@color/auto_surface_color</item>
        <item name="android:colorBackground">@color/auto_surface_color</item>
        <item name="colorOnSurface">@color/auto_on_surface</item>

        <!--Error-->
        <item name="colorError">@color/auto_error_color</item>
        <item name="colorOnError">@color/white</item>

        <item name="tabIndicatorColor">@color/auto_secondary</item>
        <item name="tabTextColor">@color/auto_on_surface</item>
        <item name="tabSelectedTextColor">@color/auto_on_surface</item>

        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>
        <item name="materialButtonStyle">@style/Widget.MyApp.MaterialButton</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>

    </style>

    <style name="Theme.Autocheck" parent="Base.Theme.Autocheck" >
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--Shape Management-->
    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
        <item name="fontFamily">@font/gilroy_light</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialButton.Outline" parent="">
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Widget.MyApp.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.MaterialCardView
        </item>
    </style>

    <style name="ShapeAppearance.App.CircleImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.FeaturedCarsImage"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearance.App.25"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="Widget.MyApp.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.MaterialButton
        </item>
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary"/>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!--Bottom Navigation View-->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/auto_secondary</item>
        <item name="colorOnPrimary">@color/auto_secondary</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="TextAppearance.App.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label.subTitle">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Subtitle2</item>
    </style>

    <style name="label.subTitle1">
        <item name="android:textAppearance">@style/TextAppearance.App.Subtitle1</item>
    </style>

    <style name="label.subTitle.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="label.title">
        <item name="android:textAppearance">@style/TextAppearance.App.Headline4</item>
    </style>

    <style name="label.title.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label.title.13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="label.title.2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="label.title.3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="label.title.4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="label.title.5">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label.body">
        <item name="android:textAppearance">@style/TextAppearance.App.Body1</item>
    </style>

    <style name="label.body.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label.body.13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="label.body.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="label.body.small">
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
    </style>

    <style name="input" parent="@style/ThemeOverlay.App.TextInputLayout">
        <item name="theme">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>

        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="colorError">?attr/colorError</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.AppTheme.TextInputEditText.FilledBox
        </item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.FilledBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorControlActivated">@color/auto_secondary</item>
    </style>

</resources>